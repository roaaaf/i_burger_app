<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.I_Burger" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.I_Burger" parent="Base.Theme.I_Burger" />
    <style name="NavigationItemTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">40sp</item>

    </style>

    <style name="LastMenuItemStyle">
        <item name="android:textColor">@color/orange</item>
    </style>


</resources>